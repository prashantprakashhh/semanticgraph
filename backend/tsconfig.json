{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true, // Add this line
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "types.d.ts"], // Add types.d.ts
    "exclude": ["node_modules"]
  }